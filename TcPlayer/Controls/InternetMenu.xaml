<Button
    x:Class="TcPlayer.Controls.InternetMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="30"
    Margin="5,0"
    d:DesignWidth="100"
    Background="{StaticResource TitleBarButton}"
    Content="Song search"
    Foreground="{StaticResource TitleBarButtonForeground}"
    mc:Ignorable="d"
    Click="Button_Click">
    <Button.ContextMenu>
        <ContextMenu>
            <MenuItem
                Click="SearchTheWebs"
                Header="Google"
                Icon="{StaticResource IconGoogle}"
                Tag="Google" />
            <MenuItem
                Click="SearchTheWebs"
                Header="Youtube"
                Icon="{StaticResource IconYoutube}"
                Tag="Youtube" />
            <MenuItem
                Click="SearchTheWebs"
                Header="Spotify"
                Icon="{StaticResource IconSpotify}"
                Tag="Spotify" />

            <MenuItem
                Click="SearchTheWebs"
                Header="Discogs"
                Icon="{StaticResource IconDiscogs}"
                Tag="Discogs" />
        </ContextMenu>
    </Button.ContextMenu>
</Button>
