<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush
        x:Key="BaseColor"
        Color="#8d6e63" />

    <SolidColorBrush
        x:Key="Buttons"
        Color="#b0bec5" />
    <SolidColorBrush
        x:Key="ButtonsLight"
        Color="#e2f1f8" />
    <SolidColorBrush
        x:Key="ButtonsDark"
        Color="#808e95" />

    <SolidColorBrush
        x:Key="Gray"
        Color="#E1E2E1" />

    <SolidColorBrush
        x:Key="TitleBar"
        Color="#5f4339" />
    <SolidColorBrush
        x:Key="TitleBarButton"
        Color="#be9c91" />
    <SolidColorBrush
        x:Key="TitleBarButtonForeground"
        Color="Black" />

    <SolidColorBrush
        x:Key="TitleBarText"
        Color="#fafafa" />

    <SolidColorBrush
        x:Key="Slider"
        Color="#ffa726" />
    <SolidColorBrush
        x:Key="SliderLight"
        Color="#ffd95b" />
    <SolidColorBrush
        x:Key="SliderDark"
        Color="#c77800" />



    <SolidColorBrush
        x:Key="TabItem.Selected.Background"
        Color="#FFFFFF" />

    <SolidColorBrush
        x:Key="TabItem.Selected.Border"
        Color="#ACACAC" />

</ResourceDictionary>