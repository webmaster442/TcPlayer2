<UserControl
    x:Class="TcPlayer.PlayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="MainButton"
            TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Buttons}" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Width" Value="48" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style
            x:Key="Meta"
            TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Semilight" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>
    <Grid ShowGridLines="true">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="300"
            Height="300"
            Margin="5"
            Fill="Red" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="5">
            <TextBlock
                Margin="0,5"
                FontFamily="Segoe UI"
                FontSize="34"
                FontStyle="Normal"
                FontWeight="Bold"
                TextAlignment="Right"
                Text="01:23:11 / 00:00:12" />
            <TextBlock
                FontSize="22"
                Style="{StaticResource Meta}"
                Text="Title" />
            <TextBlock
                FontSize="22"
                Style="{StaticResource Meta}"
                Text="Artist" />
            <TextBlock
                FontSize="18"
                Style="{StaticResource Meta}"
                Text="Album" />
            <TextBlock
                FontSize="18"
                Style="{StaticResource Meta}"
                Text="Year" />
            <TextBlock
                FontSize="14"
                Style="{StaticResource Meta}"
                Text="FileName" />
        </StackPanel>
        <Slider
            Grid.Row="1"
            Grid.Column="1" />
        <Slider
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5" />
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Button
                Content="Prev"
                Style="{StaticResource MainButton}" />
            <Button
                Content="Play"
                Style="{StaticResource MainButton}" />
            <Button
                Content="Pause"
                Style="{StaticResource MainButton}" />
            <Button
                Content="Stop"
                Style="{StaticResource MainButton}" />
            <Button
                Content="Next"
                Style="{StaticResource MainButton}" />
            <Button
                Content="Open"
                Style="{StaticResource MainButton}" />
        </StackPanel>
    </Grid>
</UserControl>
