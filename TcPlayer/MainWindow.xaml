<Window
    x:Class="TcPlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:TcPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TcPlayer"
    Width="888"
    Height="500"
    ResizeMode="NoResize"
    Background="{StaticResource BaseColor}"
    WindowStyle="None"
    x:Name="Main"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:Titlebar
            ControlledWindow="{Binding ElementName=Main}"
            Title="Tc Player 2"
            Grid.Row="0" />
        <TabControl Background="Transparent" BorderThickness="0" Grid.Row="1" TabStripPlacement="Bottom">
            <TabItem Header="Player" Background="Transparent">
                <local:PlayView Grid.Row="1"/>
            </TabItem>
            <TabItem Header="Playlist">
                
            </TabItem>

        </TabControl>
    </Grid>
</Window>
